<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackgroundColor"
    tools:context="pes.twochange.LogIn">

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="339dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/orangeroundedbutton"
        android:text="   Login with Google"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/logInBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@mipmap/google"
        android:gravity="left|center_vertical"
        android:paddingLeft="18dip"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="339dp"
        android:layout_height="27dp"
        android:text="Password"
        android:textSize="18sp"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.538" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        android:gravity = "bottom" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="342dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:gravity = "bottom" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="339dp"
        android:layout_height="27dp"
        android:text="E-Mail"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.538" />

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="339dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/orangeroundedbutton"
        android:text="LogIn"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:layout_editor_absoluteY="263dp" />

    <Button
        android:id="@+id/newUserBtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Create a new user"
        android:textColor="@color/BlueColoredButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn"
        app:layout_constraintVertical_bias="0.857"
        tools:layout_editor_absoluteY="454dp" />

</android.support.constraint.ConstraintLayout>