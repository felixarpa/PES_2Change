<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_splash"
    tools:context="pes.twochange.presentation.controller.SplashActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:contentDescription="@string/cd"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_icon4"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo_image"
        app:cardBackgroundColor="@color/green_100"
        android:visibility="gone"
        app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:text="2CHANGE"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:text="2nd chance for everything"
        android:layout_below="@+id/name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slogan"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
