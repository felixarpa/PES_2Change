<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        tools:context="pes.twochange.presentation.fragment.RegisterFragment">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newUserMailLayout"
            style="@style/EditProfileStyle.TextInputLayout"
            android:hint="Mail *">
            <EditText
                android:id="@+id/mailField"
                style="@style/EditProfileStyle"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newUserPassLayout"
            style="@style/EditProfileStyle.TextInputLayout"
            android:hint="Password *">
            <EditText
                android:id="@+id/passField"
                style="@style/EditProfileStyle"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newUserRepPassLayout"
            style="@style/EditProfileStyle.TextInputLayout"
            android:hint="Repeat Password *">
            <EditText
                android:id="@+id/repeatPassField"
                style="@style/EditProfileStyle"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/orangeroundedbutton"
            android:text="Next"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserRepPassLayout" />

    </LinearLayout>
</ScrollView>
